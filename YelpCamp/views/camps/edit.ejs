<%- include ../partials/header %>

<div class="container">

    <h1 style="text-align: center">Edit <%= camp.name %> here!!</h1>
    <div style="width: 30%; margin: 25px auto;">
        
        <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">    
                <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-default btn-block">submit!</button>
            </div>
        </form>
        <a href="/camps/<%= camp._id %>">Go back!</a>
        
    </div>

</div>
    
<%- include ../partials/footer %>