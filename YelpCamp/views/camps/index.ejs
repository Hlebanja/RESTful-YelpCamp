<%- include ../partials/header %>

<div class="container">
    <header>

        <div class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View camps from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/camps/new">Add a new camp!</a>
                </p>
            </div>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% camps.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=camp.image%>">
                <div class="caption">
                    <p> <%= camp.name %></p>
                </div>
                <p><a href="/camps/<%=camp._id%>" class="btn btn-primary">More info</a></p>
            </div>
        </div>
        <% }); %>

    </div>
</div>

<%- include ../partials/footer %>